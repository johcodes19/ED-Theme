            <div class="floating-element element-4">üíé</div>
        </div>
    {% endif %}
</section>

<style>
/* Hero-specific styles */
.hero {
    height: {{ section.settings.hero_height | default: 100 }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
    {% if section.settings.hero_background_color != blank %}
        background-color: {{ section.settings.hero_background_color }};
    {% endif %}
}

{% if section.settings.hero_background_image != blank %}
.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('{{ section.settings.hero_background_image | img_url: '1920x1080' }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: {{ section.settings.background_image_opacity | default: 0.3 }};
    z-index: -1;
}
{% endif %}

.hero-content {
    max-width: 1000px;
    padding: 0 20px;
    z-index: 2;
    {% if section.settings.content_alignment == 'left' %}
        text-align: left;
        margin-left: 0;
        margin-right: auto;
    {% elsif section.settings.content_alignment == 'right' %}
        text-align: right;
        margin-left: auto;
        margin-right: 0;
    {% else %}
        text-align: center;
        margin: 0 auto;
    {% endif %}
}

.hero-badge {
    {% if section.settings.badge_color != blank %}
        color: {{ section.settings.badge_color }};
        border-color: {{ section.settings.badge_color }};
    {% endif %}
    {% if section.settings.badge_background != blank %}
        background: {{ section.settings.badge_background }};
    {% endif %}
}

.hero h1 {
    {% if section.settings.title_color != blank %}
        color: {{ section.settings.title_color }};
    {% endif %}
    {% if section.settings.title_size != blank %}
        font-size: {{ section.settings.title_size }}px;
    {% endif %}
    {% if section.settings.title_font_weight != blank %}
        font-weight: {{ section.settings.title_font_weight }};
    {% endif %}
}

.hero-subtitle {
    {% if section.settings.subtitle_color != blank %}
        color: {{ section.settings.subtitle_color }};
    {% endif %}
    {% if section.settings.subtitle_size != blank %}
        font-size: {{ section.settings.subtitle_size }}px;
    {% endif %}
}

.cta-primary {
    {% if section.settings.primary_cta_bg != blank %}
        background: {{ section.settings.primary_cta_bg }};
    {% endif %}
    {% if section.settings.primary_cta_color != blank %}
        color: {{ section.settings.primary_cta_color }};
    {% endif %}
}

.cta-secondary {
    {% if section.settings.secondary_cta_bg != blank %}
        background: {{ section.settings.secondary_cta_bg }};
    {% endif %}
    {% if section.settings.secondary_cta_color != blank %}
        color: {{ section.settings.secondary_cta_color }};
    {% endif %}
    {% if section.settings.secondary_cta_border != blank %}
        border-color: {{ section.settings.secondary_cta_border }};
    {% endif %}
}

/* Scroll Indicator */
.scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: #FFD700;
    animation: bounce 2s ease-in-out infinite;
}

.scroll-arrow {
    font-size: 2em;
    margin-bottom: 5px;
    animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

/* Video Background */
.hero-video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
}

.hero-video-background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.video_overlay_opacity | default: 0.5 }});
}

/* Floating Elements */
.floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
}

.floating-element {
    position: absolute;
    font-size: 2em;
    opacity: 0.6;
    animation: float 6s ease-in-out infinite;
}

.element-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.element-2 {
    top: 30%;
    right: 15%;
    animation-delay: 1.5s;
}

.element-3 {
    bottom: 25%;
    left: 20%;
    animation-delay: 3s;
}

.element-4 {
    bottom: 35%;
    right: 10%;
    animation-delay: 4.5s;
}

@keyframes float {
    0%, 100% { 
        transform: translateY(0) rotate(0deg);
        opacity: 0.3;
    }
    50% { 
        transform: translateY(-20px) rotate(10deg);
        opacity: 0.8;
    }
}

/* Mobile Navigation */
.mobile-nav-toggle {
    display: none;
    background: none;
    border: none;
    flex-direction: column;
    gap: 4px;
    cursor: pointer;
    padding: 10px;
}

.mobile-nav-toggle span {
    width: 25px;
    height: 3px;
    background: #FFD700;
    transition: all 0.3s ease;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .nav-links {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background: rgba(0, 0, 0, 0.95);
        flex-direction: column;
        padding: 20px;
        gap: 10px;
    }
    
    .nav-links.active {
        display: flex;
    }
    
    .mobile-nav-toggle {
        display: flex;
    }
    
    .hero {
        height: {{ section.settings.mobile_hero_height | default: 80 }}vh;
    }
    
    .hero h1 {
        font-size: {{ section.settings.mobile_title_size | default: 2.5 }}em;
    }
    
    .hero-subtitle {
        font-size: {{ section.settings.mobile_subtitle_size | default: 1.2 }}em;
    }
    
    .cta-container {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
    
    .cta-primary, .cta-secondary {
        width: 100%;
        max-width: 300px;
        padding: 15px 30px;
        font-size: 1.1em;
    }
    
    .floating-elements {
        display: none;
    }
}
</style>

<script>
// Mobile navigation toggle
document.addEventListener('DOMContentLoaded', function() {
    const mobileToggle = document.querySelector('.mobile-nav-toggle');
    const navLinks = document.querySelector('.nav-links');
    
    if (mobileToggle && navLinks) {
        mobileToggle.addEventListener('click', function() {
            navLinks.classList.toggle('active');
        });
    }
    
    // Nav scroll effect
    window.addEventListener('scroll', function() {
        const nav = document.querySelector('.nav');
        if (nav) {
            if (window.scrollY > 100) {
                nav.style.background = 'rgba(0, 0, 0, 0.95)';
            } else {
                nav.style.background = 'rgba(0, 0, 0, 0.9)';
            }
        }
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Close mobile nav when clicking links
    document.querySelectorAll('.nav-links a').forEach(link => {
        link.addEventListener('click', function() {
            navLinks.classList.remove('active');
        });
    });
});
</script>

