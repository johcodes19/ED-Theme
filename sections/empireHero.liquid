<section class="hero" id="hero-section">
    <div class="hero-content">
        {% if section.settings.hero_badge_text != blank %}
            <div class="hero-badge">{{ section.settings.hero_badge_text }}</div>
        {% endif %}
        
        {% if section.settings.hero_title != blank %}
            <h1>{{ section.settings.hero_title }}</h1>
        {% else %}
            <h1>Don't Compete.<br>Dominate.</h1>
        {% endif %}
        
        {% if section.settings.hero_subtitle != blank %}
            <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
        {% endif %}
        
        <div class="cta-container">
            {% if section.settings.primary_cta_text != blank %}
                <a href="{{ section.settings.primary_cta_url | default: '#products' }}" class="cta-primary">
                    {{ section.settings.primary_cta_text }}
                </a>
            {% endif %}
            
            {% if section.settings.secondary_cta_text != blank %}
                <a href="{{ section.settings.secondary_cta_url | default: '#about' }}" class="cta-secondary">
                    {{ section.settings.secondary_cta_text }}
                </a>
            {% endif %}
        </div>
        
        {% if section.settings.show_scroll_indicator %}
            <div class="scroll-indicator">
                <div class="scroll-arrow">‚Üì</div>
                <span>{{ section.settings.scroll_text | default: "Scroll to Conquer" }}</span>
            </div>
        {% endif %}
    </div>
    
    {% if section.settings.hero_video_url != blank %}
        <div class="hero-video-background">
            <video autoplay muted loop playsinline>
                <source src="{{ section.settings.hero_video_url }}" type="video/mp4">
            </video>
            <div class="video-overlay"></div>
        </div>
    {% endif %}
    
    {% if section.settings.show_floating_elements %}
