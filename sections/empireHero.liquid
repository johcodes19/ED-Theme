    <div class="nav-container">
        <div class="logo">
            {% if section.settings.logo_text != blank %}
                {{ section.settings.logo_text }}
            {% else %}
                {{ shop.name | default: "Empire Domination" }}
            {% endif %}
        </div>
        <ul class="nav-links">
            {% if section.settings.nav_link_1_text != blank %}
                <li><a href="{{ section.settings.nav_link_1_url | default: '#products' }}">{{ section.settings.nav_link_1_text }}</a></li>
            {% endif %}
            {% if section.settings.nav_link_2_text != blank %}
                <li><a href="{{ section.settings.nav_link_2_url | default: '#about' }}">{{ section.settings.nav_link_2_text }}</a></li>
            {% endif %}
