<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
  
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}
  
  <link rel="canonical" href="{{ canonical_url }}">
  
  {% if template contains 'product' %}
    <meta property="og:type" content="product">
  {% else %}
    <meta property="og:type" content="website">
  {% endif %}
  
  <meta property="og:title" content="{{ page_title | escape }}">
  
  {% if page_image %}
    <meta property="og:image" content="http:{{ page_image | img_url: '1200x630' }}">
    <meta property="og:image:secure_url" content="https:{{ page_image | img_url: '1200x630' }}">
  {% endif %}
  
  <style> 
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    color: #ffffff;
    background: #000000;
    overflow-x: hidden;
}

/* Animated Background */
.background-animation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 80%, rgba(255, 215, 0, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 215, 0, 0.08) 0%, transparent 50%),
        linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #000000 100%);
    z-index: -1;
    animation: pulse 8s ease-in-out infinite alternate;
}

@keyframes pulse {
    0% { opacity: 0.8; }
    100% { opacity: 1; }
}

/* Navigation */
.nav {
    position: fixed;
    top: 0;
    width: 100%;
    padding: 20px 0;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 215, 0, 0.2);
    z-index: 1000;
    transition: all 0.3s ease;
}

.nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.8em;
    font-weight: 900;
    color: #FFD700;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 30px;
}

.nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    padding: 10px 20px;
    border: 2px solid transparent;
    border-radius: 25px;
}

.nav-links a:hover {
    color: #FFD700;
    border-color: #FFD700;
    transform: translateY(-2px);
}

/* Hero Section */
.hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero-content {
    max-width: 1000px;
    padding: 0 20px;
    z-index: 2;
}

.hero-badge {
    display: inline-block;
    background: linear-gradient(45deg, rgba(255, 215, 0, 0.2), rgba(255, 215, 0, 0.1));
    border: 1px solid #FFD700;
    padding: 10px 25px;
    border-radius: 25px;
    font-size: 0.9em;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #FFD700;
    margin-bottom: 30px;
    animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
    0% { box-shadow: 0 0 20px rgba(255, 215, 0, 0.3); }
    100% { box-shadow: 0 0 30px rgba(255, 215, 0, 0.6); }
}

.hero h1 {
    font-size: clamp(3em, 8vw, 6em);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 20px;
    background: linear-gradient(45deg, #ffffff, #FFD700, #ffffff);
    background-size: 200% 200%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.hero-subtitle {
    font-size: 1.5em;
    color: #cccccc;
    margin-bottom: 40px;
    font-weight: 300;
}

.cta-container {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 40px;
}

.cta-primary, .btn-add-to-cart, .btn-buy-now {
    background: linear-gradient(45deg, #FFD700, #FFA500);
    color: #000000;
    padding: 18px 40px;
    border: none;
    border-radius: 50px;
    font-size: 1.2em;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.cta-primary:hover, .btn-add-to-cart:hover, .btn-buy-now:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(255, 215, 0, 0.4);
}

.cta-secondary {
    background: transparent;
    color: #ffffff;
    padding: 18px 40px;
    border: 2px solid #FFD700;
    border-radius: 50px;
    font-size: 1.2em;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.cta-secondary:hover {
    background: #FFD700;
    color: #000000;
    transform: translateY(-5px);
}

/* Products Section */
.products {
    padding: 100px 0;
    background: linear-gradient(180deg, #000000 0%, #1a1a1a 50%, #000000 100%);
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
}

.section-title {
    font-size: 3em;
    font-weight: 900;
    text-transform: uppercase;
    color: #FFD700;
    margin-bottom: 20px;
    letter-spacing: 2px;
}

.section-subtitle {
    font-size: 1.3em;
    color: #cccccc;
    max-width: 600px;
    margin: 0 auto;
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-top: 60px;
}

.product-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 20px;
    padding: 40px;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.1), transparent);
    transition: left 0.5s ease;
}

.product-card:hover::before {
    left: 100%;
}

.product-card:hover {
    transform: translateY(-10px);
    border-color: #FFD700;
    box-shadow: 0 20px 50px rgba(255, 215, 0, 0.2);
}

.product-icon {
    font-size: 3em;
    margin-bottom: 20px;
    color: #FFD700;
}

.product-title {
    font-size: 1.8em;
    font-weight: 700;
    margin-bottom: 15px;
    text-transform: uppercase;
    color: #ffffff;
}

.product-description {
    color: #cccccc;
    margin-bottom: 25px;
    line-height: 1.8;
}

.product-features {
    list-style: none;
    margin-bottom: 30px;
    text-align: left;
}

.product-features li {
    color: #ffffff;
    margin-bottom: 8px;
    padding-left: 20px;
    position: relative;
}

.product-features li::before {
    content: 'ðŸ‘‘';
    position: absolute;
    left: 0;
    color: #FFD700;
}

.product-price {
    font-size: 2em;
    font-weight: 900;
    color: #FFD700;
    margin-bottom: 20px;
}

.product-btn {
    background: linear-gradient(45deg, #FFD700, #FFA500);
    color: #000000;
    padding: 15px 35px;
    border: none;
    border-radius: 25px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.product-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(255, 215, 0, 0.4);
}

/* Stats Section */
.stats {
    padding: 80px 0;
    background: linear-gradient(45deg, #1a1a1a, #000000);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    text-align: center;
}

.stat-number {
    font-size: 3em;
    font-weight: 900;
    color: #FFD700;
    display: block;
}

.stat-label {
    font-size: 1.1em;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #ffffff;
    margin-top: 10px;
}

/* Testimonials */
.testimonials {
    padding: 100px 0;
    background: #000000;
}

.testimonial-card {
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 215, 0, 0.05));
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 20px;
    padding: 40px;
    margin: 20px;
    text-align: center;
}

.testimonial-text {
    font-size: 1.2em;
    font-style: italic;
    margin-bottom: 25px;
    color: #ffffff;
}

.testimonial-author {
    font-weight: 700;
    color: #FFD700;
    text-transform: uppercase;
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
}

/* Footer */
.footer {
    background: #000000;
    padding: 60px 0 30px;
    border-top: 1px solid rgba(255, 215, 0, 0.2);
}

.footer-content {
    text-align: center;
    margin-bottom: 40px;
}

.footer-logo {
    font-size: 2em;
    font-weight: 900;
    color: #FFD700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
}

.footer-tagline {
    color: #cccccc;
    font-size: 1.1em;
    margin-bottom: 30px;
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px;
}

.social-links a {
    color: #ffffff;
    font-size: 1.5em;
    padding: 15px;
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 50%;
    transition: all 0.3s ease;
    text-decoration: none;
}

.social-links a:hover {
    color: #FFD700;
    border-color: #FFD700;
    transform: translateY(-3px);
}

.footer-bottom {
    text-align: center;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: #888888;
}

/* Product Page Styles */
.product-page-container {
    padding: 120px 0 80px;
    min-height: 100vh;
}

.product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
}

.product-images {
    position: sticky;
    top: 120px;
}

.main-image {
    margin-bottom: 20px;
}

.product-main-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 15px;
    border: 2px solid rgba(255, 215, 0, 0.2);
}

.no-image-placeholder {
    width: 100%;
    height: 500px;
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 215, 0, 0.05));
    border: 2px solid rgba(255, 215, 0, 0.2);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-icon-large {
    font-size: 6em;
    color: #FFD700;
}

.thumbnail-images {
    display: flex;
    gap: 10px;
    overflow-x: auto;
}

.product-thumbnail {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
}

.product-thumbnail:hover {
    border-color: #FFD700;
    transform: scale(1.05);
}

.product-info {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 20px;
    padding: 40px;
}

.product-badge {
    display: inline-block;
    background: linear-gradient(45deg, #FFD700, #FFA500);
    color: #000000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9em;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
}

.product-info .product-title {
    font-size: 2.5em;
    font-weight: 900;
    color: #ffffff;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.product-info .product-price {
    margin-bottom: 30px;
}

.price {
    font-size: 2.5em;
    font-weight: 900;
    color: #FFD700;
}

.compare-price {
    font-size: 1.5em;
    color: #888888;
    text-decoration: line-through;
    margin-left: 15px;
}

.save-amount {
    background: #ff4444;
    color: #ffffff;
    padding: 5px 15px;
    border-radius: 15px;
    font-size: 0.9em;
    font-weight: 700;
    margin-left: 15px;
}

.product-description {
    color: #cccccc;
    font-size: 1.1em;
    line-height: 1.8;
    margin-bottom: 30px;
}

.product-features-list {
    margin-bottom: 40px;
}

.product-features-list h3 {
    color: #FFD700;
    font-size: 1.3em;
    margin-bottom: 15px;
    text-transform: uppercase;
}

.product-features-list ul {
    list-style: none;
}

.product-features-list li {
    color: #ffffff;
    margin-bottom: 10px;
    font-size: 1.1em;
}

.product-form {
    margin-bottom: 30px;
}

.variant-option {
    margin-bottom: 20px;
}

.variant-option label {
    display: block;
    color: #ffffff;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
}

.variant-select, .quantity-input {
    width: 100%;
    padding: 15px;
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.3);
    color: #ffffff;
    font-size: 16px;
}

.variant-select:focus, .quantity-input:focus {
    outline: none;
    border-color: #FFD700;
}

.product-quantity {
    margin-bottom: 30px;
}

.product-quantity label {
    display: block;
    color: #ffffff;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
}

.quantity-input {
    width: 100px;
}

.product-buttons {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 30px;
}

.btn-add-to-cart {
    padding: 20px 40px;
    font-size: 1.3em;
}

.btn-buy-now {
    background: transparent;
    color: #FFD700;
    border: 2px solid #FFD700;
    padding: 20px 40px;
    font-size: 1.3em;
}

.btn-buy-now:hover {
    background: #FFD700;
    color: #000000;
}

.btn-add-to-cart:disabled, .btn-buy-now:disabled {
    background: #333333;
    color: #666666;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

.product-guarantee {
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.3);
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 30px;
}

.guarantee-badge {
    display: flex;
    align-items: center;
    gap: 15px;
}

.guarantee-icon {
    font-size: 2em;
}

.guarantee-text strong {
    color: #FFD700;
    font-size: 1.1em;
    display: block;
    margin-bottom: 5px;
}

.guarantee-text p {
    color: #cccccc;
    margin: 0;
}

.product-social-proof {
    display: flex;
    justify-content: space-between;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 15px;
    padding: 20px;
}

.social-proof-item {
    text-align: center;
}

.proof-number {
    display: block;
    font-size: 1.5em;
    font-weight: 900;
    color: #FFD700;
    margin-bottom: 5px;
}

.proof-label {
    color: #cccccc;
    font-size: 0.9em;
    text-transform: uppercase;
}

.product-testimonials {
    margin-top: 80px;
}

.testimonials-title {
    font-size: 2.5em;
    font-weight: 900;
    color: #FFD700;
    text-align: center;
    margin-bottom: 40px;
    text-transform: uppercase;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .nav-links {
        display: none;
    }
    
    .hero h1 {
        font-size: 2.5em;
    }
    
    .cta-container {
        flex-direction: column;
        align-items: center;
    }
    
    .products-grid {
        grid-template-columns: 1fr;
    }
    
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .product-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .product-images {
        position: static;
    }
    
    .testimonials-grid {
        grid-template-columns: 1fr;
    }
    
    .product-social-proof {
        flex-direction: column;
        gap: 15px;
    }
}

/* Animations */
.fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Scroll animations */
@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-in {
    animation: slideInUp 0.6s ease forwards;
}

